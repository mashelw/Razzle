<div class="container"> 
        <!-- Modal -->
        <div class="modal fade" id="myModal" role="dialog">
            <div class="modal-dialog modal-sm">
        
                <!-- Modal content-->
                <div class="modal-content">
                    <div class="modal-header">
                      <button type="button" class="close" data-dismiss="modal">&times;</button>
                      <h4 class="modal-title">Purchase</h4>
                    </div>
                    <div class="modal-body">
                        <form class="form-inline">
                          <label class="mr-sm-2" for="inlineFormCustomSelect">$1 Per Ticket:</label>
                            <select class="custom-select mb-2 mr-sm-2 mb-sm-0" id="inlineFormCustomSelect">
                                <option selected>Choose...</option>
                                <option value="1">1</option>
                                <option value="2">2</option>
                                <option value="3">3</option>
                                <option value="4">4</option>
                                <option value="5">5</option> 
                            </select>
                            <button type="submit" class="btn btn-primary">Submit</button>
                        </form>    
                    </div>           
                </div>     
            </div>
        </div>  
    </div>

    <!-- Page Content -->
   <div class="container">
        <!-- Logo -->
        <div class="box text-center">
        <img src="img/RazzleLogo.png"> 
        </div>
        <div class="box">
            <!-- Carousel -->
            <div id="myCarousel" class="carousel slide" data-ride="carousel">
                <!-- Indicators -->
                <ol class="carousel-indicators">
                  <li data-target="#myCarousel" data-slide-to="0"></li>
                  <li data-target="#myCarousel" data-slide-to="1"></li>
                </ol>

                <!-- Wrapper for slides -->
                <div class="carousel-inner">
                    <div class="item active">
                    <div class="col-md-4 col-sm-6 hero"></div>
                    <div class="col-md-4 col-sm-6 hero">                
                        <img src="https://entreamigoslgbt.org/wp-content/uploads/2017/05/yellow-stars-clipart-yellow-stars-clipart-clipart-panda-free-clipart-images-clipart.png" alt="First slide" class="img-responsive"> 
                        </div>  
                        <div class="col-md-4 col-sm-6 hero"></div>                
                    </div>
                    {{#each items}}
                    <div class="item">
                        <div class="jumbotron">
                            <div class="row text-center"> 
                            <div class="col-md-4 col-sm-6 hero"></div>               
                               
                                <div class="col-md-4 col-sm-6 hero">
                                    <div class="thumbnail">
                                        <img src={{this.link}}  alt={{this.item}}>
                                        <div class="caption">
                                            <h3>{{this.item}}</h3>
                                            <p>Tickets Purchased: {{this.purchasedTickets}}</p>
                                            <button class="btn btn-md btn-primary btn-block" type="submit" value= {{this.item}} id="purchase" >Buy!!</button>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-4 col-sm-6 hero"></div>
                            </div>
                        </div>
                    </div>
                    {{/each}}
                </div>
                <!-- Left and right controls for Carousel-->
                <a class="carousel-control" href="#myCarousel" data-slide="prev">
                  <span class="glyphicon glyphicon-chevron-left"></span>
                  <span class="sr-only">Previous</span>
                </a>
                <a class="right carousel-control" href="#myCarousel" data-slide="next">
                  <span class="glyphicon glyphicon-chevron-right"></span>
                  <span class="sr-only">Next</span>
                </a>
            </div>
        </div>

        <!-- User Profile -->
        <div class="box">
            <div class="jumbotron">
                
            </div>
        </div>
    </div>
       
    <hr>
